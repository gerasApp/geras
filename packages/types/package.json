{
  "name": "@geras/types",
  "version": "0.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier src --check ",
    "format:fix": "prettier src --write"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./user": {
     "types": "./src/user.ts",
     "import": "./dist/user.js",
     "require": "./dist/user.js"
   }
  },
  "devDependencies": {
    "@geras/eslint-config": "workspace:*",
    "@geras/typescript-config": "workspace:*",
    "@types/node": "^22.10.7",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "zod": "^3.25.48",
    "@nestjs/swagger": "^11.2.0",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "@nestjs/mapped-types": "^2.0.5"
  }
}
